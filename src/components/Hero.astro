---
import { PERSONAL_INFO } from "@/config/personal"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"

const personalImageAlt = PERSONAL_INFO.fullName
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/francisco.webp"
      alt={personalImageAlt}
    />
    <a
      href={PERSONAL_INFO.linkedin}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white animate-fade-in"
  >
    Hey, soy <span class="text-primary-600 dark:text-primary-400">{PERSONAL_INFO.name}</span>
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-accent-300 [&>strong]:text-accent-600 [&>strong]:font-semibold dark:text-gray-300 animate-slide-up"
  >
    {PERSONAL_INFO.description.short} <strong>{PERSONAL_INFO.title}</strong> de {PERSONAL_INFO.location}. Especializado en el desarrollo de aplicaciones web modernas y eficientes.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href={`mailto:${PERSONAL_INFO.email}`}>
      <MailIcon class="size-4" />
      Cont√°ctame
    </SocialPill>
    <SocialPill href={PERSONAL_INFO.linkedin}>
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
